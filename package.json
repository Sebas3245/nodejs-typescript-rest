{
  "name": "nodejs-typescript-rest",
  "version": "1.0.0",
  "description": "Project in Node.js Typescript app with Hexagonal DDD architecture and PostgreSQL database",
  "main": "src/index.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "pre-prod": "rimraf dist && npm run build",
    "build": "tsc",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add dist",
    "test": "jest"
  },
  "keywords": [
    "node",
    "typescript",
    "hexagonal",
    "ddd",
    "postgresql",
    "rest",
    "api"
  ],
  "author": "Juan Sebastian Lara Aros",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^10.0.0",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-typescript": "^7.23.2",
    "@types/body-parser": "^1.19.4",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
